<% if @list.imageUrl.empty? %>
    <div class="show-banner" style="background-image: url('https://images.unsplash.com/photo-1534489573486-7d1fa4f436e4?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1650&q=80')">
        <h3><%= @list.name %></h3>
    </div>
<% else %>
    <div class="show-banner" style="background-image: url('<%= @list.imageUrl %>')">
        <h2><%= @list.name %></h2>
    </div>
<% end %>

<div class="button-delete">
    <%= link_to "Delete the list", list_path(@list), class:"btn btn-danger", method: :delete, data: {confirm: "üò¢ Are you sure?"} %>
</div>

<div class="container">
  <div class="card-show-title">
    <h1>Movies üé¨</h1>
  </div>
    <div class="row">
      <% @list.bookmarks.each do |bookmark| %>
        <div class="col-6">
          <div class="card-movie">
          <div class="card-poster">
              <%= image_tag bookmark.movie.poster_url, alt: "movie poster" %>
          </div>
          <div class="card-description">
            <div class="card-title">
              <h5><%= bookmark.movie.title %></h5>
              <p> <%= bookmark.movie.rating %> ‚≠êÔ∏è</p>
            </div>
            <div class="card-overview">
              <p> <%= bookmark.movie.overview %> </p>
            </div>
            <hr>
              <p><strong>Review</strong></p>
            <div class="card-review">
              <p><%= bookmark.comment %></p>
              <%= link_to "Delete", bookmark_path(bookmark), class:"btn btn-danger", method: :delete, data: {confirm: "üò¢ Are you sure?"}  %>
            </div>
          </div>
        </div>
      </div>
      <% end %>
  </div>

    <div class="row">
      <div class="col-12">
        <hr>
        <div class="form">
         <h3>Add a new movie</h3>
        <%= simple_form_for [ @list, @bookmark ] do |f| %>
          <%= f.input :comment, placeholder: 'Add a comment' %>
           <%= f.association :movie, input_html: { class: 'select2' } %>
          <%= f.submit "Add movie", class: "btn btn-primary" %>
        <% end %>
        </div>
    </div>
  </div>
</div>
