<div class="container">
  <div class="row">
    <div class="col-12">
      <h1><%= @list.name %></h1>
    </div>
  </div>

    <div class="row">
      <div class="col-12">
        <% @list.bookmarks.each do |bookmark| %>
          <p><%= bookmark.comment %></p>
        <% end %>
      </div>
    </div>

    <div class="row">
    <div class="col-12">
      <h3>Add a new movie</h3>
      <%= simple_form_for [ @list, @bookmark ] do |f| %>
        <%= f.input :comment %>
        <%= f.association :list %>
        <%= f.association :movie %>
        <%= f.submit "Add movie", class: "btn btn-primary" %>
      <% end %>
    </div>

</div>
